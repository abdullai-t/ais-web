<div style="height:80vh; width:100vw" class="center-me">

    <div style="width:50%; background-color:white;" class="elevate-float p-3 round-me">
    <h2 class="text-center text-purple mb-4 font-2rem">Login form</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, class:"form-label"%><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
  </div>

  <div class="actions center-me">
    <%= f.submit "Log in",class:"btn btn-primary btn-lg", style:"width:30%; background-color:#6610f2" %>
  </div>
<% end %>

    </div>

